@section CSS{
    <style>
        .text-divider {
            text-align: center;
            display: flex;
            font-size: .875rem;
            color: #9da1a7;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
    </style>
}
</div>
<section class="product_section layout_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-lg-5">
                <div class="card-body">
                    <h4 class="mb-4">Sign in</h4>
                    <form asp-action="Login">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        <div class="mb-3"><label class="form-label">Email</label> <input asp-for="Email" class="form-control" placeholder="ex. name@gmail.com" type="email" /></div>
                        <div class="mb-3"><label class="form-label">Password</label>  <input asp-for="MatKhau" class="form-control" placeholder="******" type="password" /></div>
                        <div class="d-flex mb-3 justify-content-between">
                            <label class="form-check me-auto">
                                <input class="form-check-input" type="checkbox" value="" checked="">
                                <span class="form-check-label"> Remember </span>
                            </label>
                            <a href="#" class="text-decoration-none d-block">Forgot password</a>
                        </div>
                        <button class="btn w-100 btn-primary" type="submit">Sign in</button>
                    </form>
                    <p class="text-divider my-4">New to shop?</p>
                    <a asp-action="Register" class="btn w-100 btn-light">Create new account</a>
                </div>
            </div>
        </div>
    </div>
</section>
