@model _0306191074_TranThanhTam.Areas.Admin.Models.SlideShow

@{
    ViewData["Title"] = "Edit";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sửa Slideshow</h4>
            <form class="forms-sample" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="SanPhamId" class="control-label"></label>
                    <select asp-for="SanPhamId" class="form-control text-light" asp-items="ViewBag.SanPhamId"></select>
                    <span asp-validation-for="SanPhamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FileHinhAnh" class="control-label"></label>
                    <input asp-for="HinhAnh" id="hinhAnh" class="form-control text-light text-light" hidden />
                    <input asp-for="FileHinhAnh" id="img" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control text-light text-light file-upload-info" placeholder="Upload ảnh">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload hình ảnh</button>
                        </span>
                    </div>
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img style="width: 200px;" src="~/images/slideshow/@Model.HinhAnh" id="imgPreview" alt="" />
                </div>
                <div class="form-group">
                    <label asp-for="TieuDe" class="control-label"></label>
                    <input asp-for="TieuDe" class="form-control text-light" />
                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoiDung" class="control-label"></label>
                    <input asp-for="NoiDung" class="form-control text-light" />
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NgayDang" class="control-label"></label>
                    <input asp-for="NgayDang" class="form-control text-light" />
                    <span asp-validation-for="NgayDang" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#img").on("change", function (e) {
                var filePath = URL.createObjectURL(e.target.files[0]);
                var filename = $("#img").val().replace(/C:\\fakepath\\/i, '');
                $("#imgPreview").attr("src", filePath);
                $("#hinhAnh").val(filename);
            });
        });
    </script>
}

